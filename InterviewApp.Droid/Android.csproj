<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0-android</TargetFramework>
    <OutputType>Exe</OutputType>
    <ApplicationId>dk.trackman.interviewapp_droid</ApplicationId>
    <ApplicationVersion>1337</ApplicationVersion>
    <ApplicationDisplayVersion>0.1.0</ApplicationDisplayVersion>
    <RootNamespace>InterviewApp.Droid</RootNamespace>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <AndroidPackageFormat>aab</AndroidPackageFormat>
    <JavaMaximumHeapSize>1G</JavaMaximumHeapSize>
    <AndroidEnableMultiDex>true</AndroidEnableMultiDex>
    <EmbedAssembliesIntoApk>true</EmbedAssembliesIntoApk>
    <AndroidEnableAssemblyCompression>false</AndroidEnableAssemblyCompression>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <AndroidUseSharedRuntime>true</AndroidUseSharedRuntime>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Data\Data.csproj" />
    <ProjectReference Include="..\Domain\Domain.csproj" />
    <ProjectReference Include="..\Presentation\Presentation.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.6" />
    <PackageReference Include="Xamarin.Android.Glide" Version="4.16.0.13" />
    <PackageReference Include="Xamarin.Android.Glide.DiskLruCache" Version="4.16.0.13" />
    <PackageReference Include="Xamarin.AndroidX.RecyclerView" Version="1.4.0.2" />
    <PackageReference Include="Xamarin.AndroidX.AppCompat" Version="1.7.0.7" />
    <PackageReference Include="Xamarin.AndroidX.ConstraintLayout" Version="2.2.1.2" />
    <PackageReference Include="Xamarin.AndroidX.Fragment" Version="1.8.6.2" />
    <PackageReference Include="Xamarin.AndroidX.Lifecycle.Common" Version="2.8.7.4" />
    <PackageReference Include="Xamarin.AndroidX.Lifecycle.Process" Version="2.8.7.4" />
    <PackageReference Include="Xamarin.Google.Android.Material" Version="1.12.0.4" />
    <PackageReference Include="Microsoft.Maui.Essentials" Version="9.0.80" />
  </ItemGroup>

</Project>
